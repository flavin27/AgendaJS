
<%- include('includes/head') %>
<header class="container my-4">
    <div class="row">
        <div class="col-12 col-lg-6 ">
            <h1 class=" text-center text-md-end">Crie sua conta ou login</h1>
            <p class="lead text-center text-md-end text-muted">Faça login ou crie sua conta abaxo</p>
        </div>
    </div>
</header>

<%- include('includes/messages') %>

<div class="row">
    <div class="col-lg">
        <h4>Faça seu cadastro</h4>
        <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group my-4">
                <label>Email: </label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Senha: </label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
    <div class="col-lg">
        <h4>Faça seu login</h4>
        <form class="form-login" action="/login/login" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group my-4">
                <label>Email: </label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Senha: </label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
</div>
<%- include('includes/footer') %>



